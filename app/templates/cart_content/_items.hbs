{{#each cart.content as |record|}}
  <li>
    <div class="row">
      <div class="large-3 medium-3 columns cart-redirect-link {{if (is-not record.available) disabled}}" {{action 'updateCartItemParams' record.id}}>
          <img class="thumb-image {{unless record.available 'grayed-image'}}" src="{{record.imageUrl}}" />
      </div>

      <div class="large-9 medium-9 columns cart-redirect-link {{if (is-not record.available) disabled}}" {{action 'updateCartItemParams' record.id}}>
          {{record.name}}
        {{#unless record.available}}
          <div class="unavailable">{{t "cart_content.unavailable"}}</div>
        {{/unless}}
      </div>
    </div>
  </li>
{{/each}}
