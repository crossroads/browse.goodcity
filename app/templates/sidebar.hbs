<nav class="tab-bar show-for-small">
  <section class="left-small">
    <a class="left-off-canvas-toggle menu-icon" href="#">
      <span></span>
    </a>
  </section>

  <section class="middle tab-bar-section show-for-small">
    <h1>{{pageTitle}}</h1>
  </section>

  {{#if hasCartItems}}
    <section class="right-small" {{action 'displayCart'}}>
      {{partial 'cart_truck_icon'}}
    </section>
  {{/if}}
</nav>

<aside class="left-off-canvas-menu menu-list">
  <ul class="off-canvas-list menu">
    <li>
      {{#link-to "home" class="menu-1"}}
        <i class="fa fa-home"></i>
        <div>{{t "application.sidebar.home"}}</div>
      {{/link-to}}
    </li>

     <li>
      {{#link-to "browse" class="menu-2"}}
        <i class="fa fa-folder-open"></i>
        <div>{{t "application.sidebar.browse"}}</div>
      {{/link-to}}
    </li>

    <li>
      {{#link-to "my_orders" class="menu-3"}}
        <i class="fa fa-shopping-cart"></i>
        <div>{{t "application.sidebar.myorders"}}</div>
      {{/link-to}}
    </li>

    <li>
      {{#link-to "browse" class="menu-4"}}
        <i class="fa fa-question"></i>
        <div>{{t "application.sidebar.about"}}</div>
      {{/link-to}}
    </li>
    {{#if isUserLoggedIn}}
      <li>
        <a href="#" class="menu-5" {{action "logMeOut"}}>
          <i class="fa fa-sign-out"></i>
          <div>{{t "logout.logout"}}</div>
        </a>
      </li>
    {{/if}}


    <li class="links">
      <div class="line">{{language-switcher}}</div>
      <div class="line">
        <a href="http://www.crossroads.org.hk"><span>{{t "application.sidebar.terms"}} </span></a>
        |
        <a href="http://www.crossroads.org.hk"><span>{{t "application.sidebar.privacy_policy"}}</span></a>
      </div>
      <div class="line">{{t "application.sidebar.version" }} {{ appVersion }}</div>
    </li>
  </ul>
</aside>

{{#if hasCartItems}}
  {{partial "desktop_cart_sidebar"}}
{{/if}}
