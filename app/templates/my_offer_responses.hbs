<div class="row my_dashboard">
  {{partial 'my_dashboard/my_dashboard_tabs'}}

  <div class="small-12 columns my_orders">
    <div class="content">
      <div class="row">
        <div class="columns browse button-container small-7 large-6 medium-7">
          {{#link-to "offers"}}
          <div class="browse-button button light">
            <i class="fa">{{fa-icon 'hand-paper'}}</i>
            View / Respond to offers
          </div>
          {{/link-to}}
        </div>
        <div class="columns booking button-container small-4 large-6 medium-4">
          {{#link-to "about" class="learn-link"}}
          {{t 'home.order_goods.learn_how'}}
          {{/link-to}}
        </div>
      </div>
      <div class="row donor-offers-heading">
        Your Responses to Donor Offers
      </div>
      <ul class="list list-items">
        {{#each offerResponses as |offer|}}

        <div class="order_block">
          <div class="row order_header">
            <div class="small-4 medium-0 large-4 columns order_transport">
              Offer {{offer.id}}
            </div>
            <div class="small-6 columns order_code">
              <span>
                {{#if offer.expires_at}}
                  Closed for new Responses
                {{else}}
                  Open for responses
                {{/if}}
              </span>
            </div>
            <div class="small-2 columns order_state">
              <div class="order_state_icon ">
                <i class="fa"></i>
              </div>
              <div class="order_state_text"> </div>
            </div>
          </div>

          <div class="row order_body">
            <div class="arrow-right">
              <i class="fa">{{fa-icon 'chevron-right'}}</i>
            </div>
            <div class="row">
              <div class="small-3 columns field">
                {{ t "my_orders.due_date" }}
              </div>
              <div class="small-6 columns value schedule">
              </div>
              <div class="small-3 columns unread-message-count">
                {{partial 'orders/unread_message_bubble'}}
                {{fa-icon 'comments-o' size="2x"}}
              </div>
            </div>
          </div>
        </div>

        {{/each}}
      </ul>
    </div>
  </div>
</div>
