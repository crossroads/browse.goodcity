<div class="row my_dashboard">
  {{partial 'my_dashboard/my_dashboard_tabs'}}

  <div class="small-12 columns my_orders">
    <div class="content">
      <div class="row">
        <div class="columns browse button-container small-7 large-6 medium-7">
          {{#link-to "offers"}}
          <div class="browse-button button light">
            <i class="fa">{{fa-icon 'hand-paper'}}</i>
            {{t "my_dashboard.from_donors.respond_offers"}}
          </div>
          {{/link-to}}
        </div>
        <div class="columns booking button-container small-4 large-6 medium-4">
          {{#link-to "about" class="learn-link"}}
          {{t 'home.order_goods.learn_how'}}
          {{/link-to}}
        </div>
      </div>
      <div class="row donor-offers-heading">
        {{t "my_dashboard.from_donors.your_responses"}}
      </div>
      <ul class="list list-items shared-offers-list">
        {{#each offers as |offer|}}
          <div class="order_block" {{action "visitSharedOffer" offer}}>
            <div class="row order_header offer-header">
              <div class="small-4 medium-0 large-4 columns order_transport">
                {{t "my_dashboard.from_donors.offer"}} {{offer.id}}
              </div>
              <div class="small-8 columns order_code response-status">

                <span class="response-text">
                  {{#if offer.openForResponses}}
                    {{t "my_dashboard.from_donors.open_for_response"}}
                  {{else}}
                    {{t "my_dashboard.from_donors.closed_for_response"}}
                  {{/if}}
                </span>

                <span class="response-icon {{if offer.openForResponses 'available' 'closed'}}">
                  {{#if offer.openForResponses}}
                  <i class="fa">{{fa-icon 'bullhorn'}}</i>
                  {{else}}
                  <i class="fa">{{fa-icon 'ban'}}</i>
                  {{/if}}
                </span>

              </div>
            </div>

            <div class="row order_body">
              <div class="arrow-right">
                <i class="fa">{{fa-icon 'chevron-right'}}</i>
              </div>
              <div class="row">
                <div class="small-9 columns field">
                  {{#each offer.packages as |pkg|}}
                    <img class="thumb-image" src="{{pkg.miniImageUrl}}"/>
                  {{/each}}
                </div>
                <div class="small-3 columns unread-message-count">
                  {{#if offer.hasUnreadMessages}}
                    <div class='unread_message'>{{offer.unreadMessagesCount}}</div>
                    {{fa-icon 'comments-o' size="2x"}}
                  {{/if}}
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
