<div class="row checkout_pages">
  <div class="small-12 medium-9 large-9 columns">
    <section class="main-section new-user-section ui login_page">
      <nav class="tab-bar">
        <section class="left-small">
          {{#link-to "authenticate" classNames="back"}}{{t "back"}}{{/link-to}}
        </section>

        <section class="middle tab-bar-section">
          <h1 class="title">{{t "account.account"}}</h1>
        </section>
      </nav>

      {{small-cart-toggle-view}}

      <div class="row">
        <div class="small-12 columns">
          <div class="mobile center_align">
            <div class="row">
              <div class="small-12 columns">
               <label class="form-label">{{t "account.welcome"}}</label>
              </div>
              <div class="small-12 columns">
               <label class="form-label">{{t "account.contact_details"}}</label>
              </div>
            </div>

            <br>

            {{#validatable-form onSubmit=(action 'saveAccount') as |form|}}
              <div class="row">
                <div class="small-12 columns">
                    <label class="form-label">{{t "account.organisation"}}</label>
                    {{#link-to "search_organisation"}}
                      {{#if model.organisation}}
                        {{#form-control}}
                          {{input type="text" id = "organisation_details" classNames="number_input center_align_placeholder" required='true' value=model.organisation.nameEn}}
                          <div class="input-error warning_empty">{{fa-icon "warning"}}&nbsp;&nbsp;{{t "account.organisation_warning"}}</div>
                        {{/form-control}}
                      {{else}}
                        {{#form-control}}
                          {{input type="text" id = "organisation_details" classNames="number_input center_align_placeholder" required='true' }}
                          <div class="input-error warning_empty">{{fa-icon "warning"}}&nbsp;&nbsp;{{t "account.organisation_warning"}}</div>
                        {{/form-control}}
                      {{/if}}
                    {{/link-to}}
                </div>
              </div>
              <br>
              <div class="row">
                <div class="small-2 columns">
                    <label class="form-label">{{t "account.title"}}</label>
                    {{#form-control}}
                      {{input type="text" value=model.user.title id="title" classNames="number_input center_align_placeholder" required='true'}}
                      <div class="input-error warning_empty">{{fa-icon "warning"}}&nbsp;&nbsp;{{t "account.title_warning"}}</div>
                    {{/form-control}}
                </div>
                <div class="small-5 columns">
                    <label class="form-label">{{t "account.first"}}</label>
                    {{#form-control}}
                      {{input type="text" value=model.user.firstName id="firstName" classNames="number_input center_align_placeholder" required='true'}}
                      <div class="input-error warning_empty">{{fa-icon "warning"}}&nbsp;&nbsp;{{t "account.first_name_warning"}}</div>
                    {{/form-control}}
                </div>
                <div class="small-5 columns">
                    <label class="form-label">{{t "account.last"}}</label>
                    {{#form-control}}
                      {{input type="text" value=model.user.lastName id="lastName" classNames="number_input center_align_placeholder" required='true'}}
                      <div class="input-error warning_empty">{{fa-icon "warning"}}&nbsp;&nbsp;{{t "account.last_name_warning"}}</div>
                    {{/form-control}}
                </div>
              </div>
              <br>
              <div class="row">
                <div class="small-12 columns">
                    <label class="form-label">{{t "account.position"}}</label>
                    {{#if model.organisationsUser}}
                      {{#form-control}}
                        {{input type="text" value=model.organisationsUser.position id="position" classNames="number_input center_align_placeholder" required='true' autoFocus=true}}
                        <div class="input-error warning_empty">{{fa-icon "warning"}}&nbsp;&nbsp;{{t "account.position_warning"}}</div>
                      {{/form-control}}
                    {{else}}
                      {{#form-control}}
                      {{input type="text" classNames="number_input center_align_placeholder" required='true' autoFocus=true}}
                      <div class="input-error warning_empty">{{fa-icon "warning"}}&nbsp;&nbsp;{{t "account.position_warning"}}</div>
                    {{/form-control}}
                    {{/if}}
                </div>
              </div>
              <br>
              <div class="row">
                <div class="small-12 columns">
                    <label class="form-label">{{t "account.email"}}</label>
                    <label class="form-label">{{t "account.work"}}</label>
                    {{#form-control}}
                      {{input value=email value=model.user.email classNames="number_input center_align_placeholder" id="email" type="email" required='true'}}
                      <div class="input-error warning_empty">{{fa-icon "warning"}}&nbsp;&nbsp;{{t "account.email_warning"}}</div>
                    {{/form-control}}
                </div>
              </div>
              <div class="row">
                {{!-- <div class="save_button"><i class="fa fa-angle-double-down fa-2x"></i></div> --}}
                <div class="small-12 medium-12 columns">
                  <button {{action 'submit' target=form}} class="button expand expand_button">{{t "account.continue"}}</button>
                </div>
              </div>
            {{/validatable-form}}
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
