<div class="row my_orders">
  <div class="title show-for-medium-up">{{t "my_orders.my_orders"}}</div>
    <div class="small-12 columns content">
      {{#if selectedOrder}}
        <div class="order-summary {{selectedOrder.state}}">
          {{partial "order/summary"}}
        </div>
      {{else}}
        <div class="row">
          <div class="columns button-container small-6">
            {{#link-to "browse"}}
              <div class="button light">
                {{t 'home.order_goods.action'}}
                <i class="fa fa-shopping-cart" aria-hidden="true"></i>
              </div>
            {{/link-to}}
          </div>
          <div class="columns button-container small-6">
            {{book-appointment buttonStyle='light'}}
          </div>
        </div>
        <ul class="list list-items">
          {{#each arrangedOrders as |order|}}
            <li {{action "setOrder" order}}>
              {{ partial 'order/order_block'}}
            </li>
          {{/each}}
        </ul>
      {{/if}}
    </div>
</div>

{{#message-box btn1Text=(t "not_now") btn2Text=(t "cancel_booking.title") btn2Callback=(action "cancelOrder") isVisible=showCancelBookingPopUp classNames="popupOverlay designate-form"}}

    <p class="cancel-booking-warning">{{t "cancel_booking.cancel_booking_warning"}}</p>
    <p>{{t "cancel_booking.cancel_booking_info"}}</p>
    <p>{{t "cancel_booking.cancel_booking_reason_title"}}</p>

{{/message-box}}
