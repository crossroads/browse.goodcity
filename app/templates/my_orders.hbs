<div class="row my_dashboard">
  {{partial 'my_dashboard/my_dashboard_tabs'}}

  <div class="small-12 columns my_orders">
    <div class="content">
      <div class="row">
        <div class="columns browse button-container small-7 large-6 medium-7">
          {{#link-to "browse"}}
          <div class="browse-button button light">
            <i class="fa">{{fa-icon 'shopping-cart'}}</i>
            {{t 'home.order_goods.action'}}
          </div>
          {{/link-to}}
        </div>
        <div class="columns booking button-container small-4 large-6 medium-4">
          {{#link-to "about" class="learn-link"}}
          {{t 'home.order_goods.learn_how'}}
          {{/link-to}}
        </div>
      </div>
      <ul class="list list-items">
        {{#each arrangedOrders as |order|}}
        {{#if order.isDraft}}
        <div {{ action 'editOrder' order}}>
          {{ partial 'order/order_block'}}
        </div>
        {{else}}
        <div {{ action 'viewOrder' order}}>
          {{ partial 'order/order_block'}}
        </div>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
