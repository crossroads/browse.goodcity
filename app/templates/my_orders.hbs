<div class="row my_orders">
  {{#unless hideHeaderBar}}
    <div class="title show-for-medium-up">{{t "my_orders.my_orders"}}</div>
  {{/unless}}
  <div class="small-12 columns content">
    {{!-- {{#if (is-and selectedOrder (is-not selectedOrder.isDraft))}}
      <div class="order-summary {{selectedOrder.state}}">
        {{partial "order/summary"}}
      </div>
    {{else}} --}}
      <div class="row">
        <div class="columns button-container small-6">
          {{#link-to "browse"}}
            <div class="button light">
              {{t 'home.order_goods.action'}}
              <i class="fa fa-shopping-cart" aria-hidden="true"></i>
            </div>
          {{/link-to}}
        </div>
        <div class="columns button-container small-6">
          {{book-appointment buttonStyle='light'}}
        </div>
      </div>
      <ul class="list list-items">
        {{#each arrangedOrders as |order|}}
          <li {{action "setOrder" order}}>
            {{#if order.isDraft}} 
              {{#link-to 'request_purpose' (query-params bookAppointment=isAppointmentDraft orderId=order.id)}}
                {{ partial 'order/order_block'}}
              {{/link-to}}
            {{else}}
              {{#link-to "orders.detail" order.id}}
                {{ partial 'order/order_block'}}
              {{/link-to}}
            {{/if}}
          </li>
        {{/each}}
      </ul>
    {{!-- {{/if}} --}}
  </div>
</div>
