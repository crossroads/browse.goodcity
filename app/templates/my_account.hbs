<div class="row my_dashboard">
  <div class="title show-for-medium-up">{{t "my_dashboard.title"}}</div>
  {{partial 'my_dashboard/my_dashboard_tabs'}}

  <div class="small-12 columns">
    <div class="row my_account content">
      <section class="details">
        <div class="row">
          <div class="small-12 large-10 large-offset-1 medium-10 medium-offset-1 columns">
            <div class="mobile">
              <div class="row">
                <div class="small-12 medium-12 large-12 columns section-title">
                  {{t 'my_dashboard.account.your_details'}}
                </div>
              </div>
              <div class="detail-row row">
                {{#if model.organisation}}
                <div class="small-12 columns" id="organisation_id">
                  <div class='row'>
                    <div class="small-4 columns data-type">
                      {{t "account.organisation"}}
                    </div>
                    <div class="small-8 columns data">
                      {{model.organisation.nameEn}}
                    </div>
                  </div>
                </div>
                {{/if}}
              </div>
              <div class="detail-row row">
                <div class="small-3 columns data-type">
                  {{t 'my_dashboard.account.name'}}
                </div>
                <div class="small-9 columns data">
                  {{model.user.firstName}} {{model.user.lastName}}
                </div>
              </div>
              <div class="detail-row row">
                <div class="small-3 columns data-type">{{t "account.position"}}</div>
                <div class="small-9 columns data">
                  {{#if model.organisationsUser}}
                  {{model.organisationsUser.position}}
                  {{/if}}
                </div>
              </div>
              <div class="detail-row row">
                <div class="small-3 columns data-type">
                  {{t 'account.email'}}
                </div>
                <div class="small-9 columns data">
                  {{#if model.user.email}}
                  <div class="row">
                    <div class="small-12 medium-12 large-8 columns">
                      {{model.user.email}}
                    </div>
                    {{#if model.user.isEmailVerified}}
                    <div class="small-3 medium-3 large-4 columns verified_icon">
                      <div>
                        {{fa-icon "check-circle" prefix="far"}}
                        <span class="verified_text">{{t 'my_dashboard.account.verified_text'}}</span>
                      </div>
                    </div>
                    {{/if}}
                  </div>
                  {{/if}}
                </div>
              </div>
              <div class="detail-row row">
                <div class="small-3 columns data-type">
                  {{t 'account.mobile'}}
                </div>
                <div class="small-9 columns data">
                  <div class="row">
                    {{#if model.user.mobile}}
                    <div class="small-12 medium-12 large-6 columns">
                      {{model.user.mobile}}
                    </div>
                    {{#if model.user.isMobileVerified}}
                    <div class="small-3 medium-3 large-3 columns verified_icon">
                      <div>
                        {{fa-icon "check-circle" prefix="far"}}
                        <span class="verified_text">{{t 'my_dashboard.account.verified_text'}}</span>
                      </div>
                    </div>
                    {{/if}}
                    {{/if}}
                  </div>
                </div>
              </div>
              <div class="detail-row row">
                <div class="small-3 columns data-type">
                  {{t 'account.preffered_contact_number'}}
                </div>
                <div class="small-7 large-7 columns data">
                  {{#if (is-and model.organisationsUser model.organisationsUser.preferredContactNumber)}}
                  {{model.organisationsUser.preferredContactNumber}}
                  {{/if}}
                </div>
              </div>
              <div class="detail-row row">
                <div class="small-6 columns data-type">
                  <button {{action 'showPhoneOverlay'}}>{{t 'account.change_phone_number'}}</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>

  {{change-phone-number-overlay open=accountService.openPhoneOverlay}}
</div>
