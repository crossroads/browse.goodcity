<div class="row checkout_pages login_page">
  <div class="small-12 medium-9 large-6 columns">
    <section class="main-section new-user-section ui login_page">

      <nav class="tab-bar">
        <section class="left-large">
          {{#back-link fallbackRoute="/"}}{{fa-icon "angle-left"}} {{t "back"}}{{/back-link}}
        </section>

        <section class="middle tab-bar-section">
          <h1 class="title">{{t "login.welcome_text"}}</h1>
        </section>
      </nav>

      {{#unless cart.isEmpty}}
      {{small-cart-toggle-view}}
      {{/unless}}

      {{#validatable-form onSubmit=(action 'resendPin') as |form|}}
      <div class="row">
        <div class="small-12 large-11 columns">
          <div class="mobile center_align">
            <div class="row">
              <div class="small-12 columns">
                <label class="form-label title-label">{{t "login.get_started"}}</label>
              </div>
              <div class="small-12 columns">
                <label class="form-label">{{t "login.input_mobile_email"}}</label>
              </div>
            </div>

            <div class="row">
              {{#form-control}}
              <div class="small-12 medium-8 columns">
                {{input value=mobileOrEmail classNames="number_input center_align_placeholder" id="mobile" type=text pattern="^(\s*[456789]\d{7}\s*)|(\s*[^@\s]+@[^@\s]+)\s*$" required='true'}}
                <div class="small-12 columns input-error warning_empty login">
                  {{fa-icon "exclamation-triangle"}}&nbsp;&nbsp;{{t "login.mobile_email_warning"}}
                </div>
              </div>
              {{/form-control}}
            </div>

            <div class="row collapse">
              <div class="small-12 medium-8 columns">
                <button id="getsmscode" disabled = {{pinAlreadySent}} class="button expand expand_button"
                  {{action 'submit' target=form}}>{{t "login.continue"}}</button>
                <label class="form-label">
                {{#if pinAlreadySent}}
                  {{t "_resend.please_wait" timer=timer}}
                {{/if}}
                </label>
              </div>
            </div>
            <div class="small-12 columns">
              <label class="form-label">
                {{t "login.privacy"}}{{#link-to "privacy" classNames="auth_links"}}{{t "login.policy"}}{{/link-to}}
              </label>
            </div>
          </div>
        </div>
      </div>
      {{/validatable-form}}

    </section>
  </div>
  {{partial "cart_content/checkout_full_view"}}
</div>
