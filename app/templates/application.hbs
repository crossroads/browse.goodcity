            {{#if showSidebar}}
              {{partial "sidebar"}}
              <div class="show-for-small">
                <a class="exit-off-canvas"></a>
              </div>
            {{/if}}
            {{liquid-outlet}}
          </div>
        </div>
      </div>
    </div>
  {{/app-canvas}}
  {{partial 'cart_details_sidebar'}}

{{/if}}
