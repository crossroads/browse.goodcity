<div class="online-order-timeslot-list-overlay">
  <div class="header">
    {{t "order.online_order.good_limit_dates"}} <br>
    {{t "order.online_order.staff_contact"}}
  </div>

  {{#each onlineOrderPickupSlots as |slot|}}
    <a {{action 'selectOnlineOrderSlot' slot}}>
      <div class="row slot-list">
        <div class="small-6 columns date">
          {{display-time slot.timestamp "dddd MMMM Do"}}
        </div>
        <div class="small-6 columns period">
          {{#if slot.isMorning}}
            {{t 'morning'}}
          {{else}}
            {{t 'afternoon'}}
          {{/if}}
        </div>
      </div>
    </a>
  {{/each}}
</div>
