<div class="booking-tab">

  {{!-- FIRST SECTION: ORDER INFO/STATUS --}}
  <section class="details">

    {{!-- ORDER TYPE --}}
    <div class="detail-row">
      <div class="data-type">{{ t "my_orders.details.type" }}</div>
      <div class="data">
        {{#if selectedOrder.orderTransport.isAppointment}}
          {{ t "my_orders.details.types.visit" }}
        {{else}}
          {{ t "my_orders.details.types.delivery" }}
        {{/if}}
      </div>
    </div>

    {{!-- TRANSPORT --}}
    <div class="detail-row">
      <div class="data-type">{{ t "my_orders.details.transport" }}</div>
      <div class="data">{{ t (concat "my_orders.details.transports." selectedOrder.transportKey) }}</div>
    </div>

    {{!-- SCHEDULED DATE --}}
    <div class="detail-row">
      <div class="data-type">{{ t "my_orders.details.appointment" }}</div>
      <div class="data">{{ display-datetime selectedOrder.orderTransport.scheduledAt format="dddd Do MMMM hh:mm a" }}</div>
    </div>

    {{!-- ORDER STATE --}}
    <div class="row state-description">
      <div class="state-container">
        <div class="state-title">
          <i class="fa fa-lg fa-{{ selectedOrder.stateIcon }}"></i>
          {{ t (concat "my_orders.details.state_titles." selectedOrder.state) default=selectedOrder.state }}
        </div>
        <div class="state-text">
          {{ t (concat "my_orders.details.state_descriptions." selectedOrder.state) }}
        </div>
      </div>
    </div>
  </section>

  {{!-- SECOND SECTION: BENEFICIARY  --}}
  {{#if selectedOrder.beneficiary}}
    <section class="details beneficiary">
      <div class="section-title">
        {{ t 'my_orders.details.beneficiary.client_information' }}
      </div>
      {{!-- ID TYPE --}}
      <div class="detail-row">
        <div class="data-type">{{ t 'my_orders.details.beneficiary.id_type' }}</div>
        <div class="data">{{ selectedOrder.beneficiary.identityType.name }}</div>
      </div>
      {{!-- ID NO --}}
      <div class="detail-row">
        <div class="data-type">{{ t 'my_orders.details.beneficiary.id_number' }}</div>
        <div class="data">{{ selectedOrder.beneficiary.identityNumber }}</div>
      </div>
      {{!-- NAME --}}
      <div class="detail-row">
        <div class="data-type">{{ t 'my_orders.details.beneficiary.client_name' }}</div>
        <div class="data">
          {{ selectedOrder.beneficiary.title }}
          {{ selectedOrder.beneficiary.firstName }}
          {{ selectedOrder.beneficiary.lastName }}
        </div>
      </div>
      {{!-- MOBILE --}}
      <div class="detail-row">
        <div class="data-type">{{ t 'my_orders.details.beneficiary.client_phone' }}</div>
        <div class="data">{{ selectedOrder.beneficiary.phoneNumber }}</div>
      </div>
    </section>
  {{/if}}

  {{!-- THIRD SECTION: REQUEST INFO --}}
  <section class="details purpose">
    <div class="section-title">
      {{ t 'my_orders.details.request.request_purpose' }}
    </div>
    {{!-- Purpose --}}
    <div class="detail-row">
      <div class="data-type">{{ t 'my_orders.details.request.purpose_of_goods' }}</div>
      <div class="data">
        <ul>
          {{#each selectedOrder.ordersPurposes as |orderPurpose|}}
            <li>
              {{ orderPurpose.purpose.description }}
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
    {{!-- Number benefiting --}}
    <div class="detail-row">
      <div class="data-type">{{ t 'my_orders.details.request.number_benefiting' }}</div>
      <div class="data">{{ selectedOrder.peopleHelped }}</div>
    </div>
    {{!-- Description of needs --}}
    <div class="detail-row">
      <div class="data-type">{{ t 'my_orders.details.request.description_of_needs' }}</div>
      <div class="data">{{ selectedOrder.purposeDescription }}</div>
    </div>
  </section>
</div>
