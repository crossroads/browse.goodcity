{{#if isMobileApp}}
  {{scroll-to-bottom customClass="confirm-booking-detail-info-scroll-arrow"}}
{{/if}}
<div class="row">
  <div class="large-8 columns large-offset-2 medium-offset-1 medium-10 small-12 book">
    <div class="row checkout_pages">
      <div class="small-12 columns">
        <section class="main-section new-user-section ui login_page large-10 large-offset-1 medium-10 medium-offset-1">
          <nav class="tab-bar">
            <section class="left-large inline-content">
              {{fa-icon "angle-left"}} {{#link-to "order.schedule_details" order.id classNames="back"}}{{t "back"}}{{/link-to}}
            </section>
             <section class="middle tab-bar-section">
              <h1 class="title"> {{t "order.confirm_booking.title"}} </h1>
            </section>
            <section {{action "cancelBookingPopUp"}} id="cancel-booking-link" class="right-large inline-content right-align">
              {{t "cancel"}}
            </section>
          </nav>
        </section>
      </div>
    </div>

    <section class="main-section client-information large-10 large-offset-1 medium-10 small-12 medium-offset-1">
      <div class="small-12 columns type-of-id-text">
        {{t "order.confirm_booking.info"}}
      </div>
      <br>
      <br>
      <div class="row">
        <div class="small-10 small-offset-1 columns">
          <button id="submit_pin" class="button expand drop_off" {{action 'confirmBooking' order}}>
            {{t "order.confirm_booking.submit_order"}}
          </button>
        </div>
      </div>
    </section>

    {{!-- User details section --}}
    {{partial "order/user_details"}}

    {{!-- Request purpose details section --}}
    {{partial "order/request_purpose_detail"}}

    {{!-- Client information details section --}}
    {{#if order.beneficiaryId}}
      {{partial "order/client_info_detail"}}
    {{/if}}

    {{!-- Goods details section --}}
    {{#if order.isAppointment }}
      {{partial "order/goods_detail"}}
    {{/if}}

    {{!-- Appointment details section --}}
    {{partial "order/schedule_summary"}}

    <section class="main-section client-information large-10 large-offset-1 medium-10 medium-offset-1 small-12">
      <div class="row">
        <div class="small-10 small-offset-1 columns">
          <button id="confirm_booking_button" class="button expand drop_off" {{action 'confirmBooking' order}}>
            {{t "order.confirm_booking.submit_order"}}
          </button>
        </div>
      </div>
    </section>
  </div>
</div>
{{partial "order/cancel_order"}}
