<div class="title show-for-medium-up">
  <div class="large-1 medium-1 columns">
    {{notification-icon}}
  </div>
  <div style="padding-right:4rem;">
    {{t "shareableOffers.respond_to_offer"}} {{model.id}}
  </div>
</div>

<div class="row tabs tab-icons">
  <div class="small-6 orders tab columns text-center">
    {{#link-to 'offers.detail' uid tagName="div" classNames="orders tab text-center"}}
      <i class="fa dashboard-menu item-menu">{{fa-icon 'list'}}</i>
      {{t 'messages.offer_details'}}
    {{/link-to}}
  </div>

  <div class="small-6 orders tab columns text-center">
    {{#link-to 'offers.messages' model.id (query-params uid=uid) tagName="div" classNames="tab columns text-center"}}
    <i class="fa dashboard-menu item-menu">{{fa-icon 'comments' }}</i>
    {{t 'messages.your_response'}}
    {{/link-to}}
  </div>
</div>

