<div class="category_page offers">
  <nav class="tab-bar category_page hide-for-small">
    <section class='left-samll'style="float: left;padding-top:0.6rem;">
      {{notification-icon}}
    </section>
    <section class='main-section ui'>
      <h1 align="center" class="title">{{t "browse.title"}}</h1>
    </section>
  </nav>

  <section class="main-section category-items-list">
    <div class="row">
      {{#if offers.length}}
      <div class="info_box">
        {{t 'offers.available_offers'}}
        {{#link-to 'faq'}}{{t 'offers.available_offers_read_more'}}{{/link-to}}
      </div>
      {{else}}
      <div class="info_box">
        {{t 'offers.no_offers_available'}}
        <ul>
          <li>{{#link-to 'browse'}}{{t 'offers.browse_online'}}{{/link-to}}{{t 'offers.or'}}</li>
          <li>
            <div class="inline-block">
              {{#book-appointment as |appointment|}}
                <a {{action appointment.clickItem}}>{{t "offers.book_to_visit"}}</a>
              {{/book-appointment}}
            </div>
          </li>
        </ul>
        <div>
          {{t 'offers.view_my_offers'}}
          {{#link-to 'my_orders'}}{{t 'offers.go_to_dashboard'}}{{/link-to}}
        </div>
      </div>
      {{/if}}
    </div>
    <div class="row sort">
      <div class="small-2 medium-1 medium-offset-7 small-offset-5 columns large-1 large-offset-9 title" align="right">
        {{t "category.sort.title"}}
      </div>
      <div class="small-4 large-2 columns dropdown" align="left">
        {{ select-list class="package-category" content=sortOptions on-change=(action (mut selectedSort)) }}
        <i class="fa dropdown">{{fa-icon 'sort-amount-down'}}</i>
      </div>
    </div>

    <hr>
    <ul class="large-block-grid-6 small-block-grid-2 medium-block-grid-3 list items_list xxlarge-block-grid-4">
      {{#each offers as |record|}}
        {{offers-block record=record district=record.district_id}}
      {{/each}}
    </ul>
  </section>
</div>


{{#link-to 'faq'}}<p>{{ t "about.introduction.faq" }}</p>{{/link-to}}