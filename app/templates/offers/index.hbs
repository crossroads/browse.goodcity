<div class="category_page offers">
  <nav class="tab-bar category_page">
    <section class='main-section ui'>
      <h1 align="center" class="title hide-for-small">GoodCity for Charities</h1>     
    </section>
  </nav>

  <section class="main-section category-items-list">
    <div class="row sort">
      <div class="small-2 medium-1 medium-offset-7 small-offset-5 columns large-1 large-offset-9 title" align="right">
        {{t "category.sort.title"}}
      </div>
      <div class="small-4 large-2 columns dropdown" align="left">
        {{ select-list class="package-category" content=sortOptions on-change=(action (mut selectedSort)) }}
        <i class="fa dropdown">{{fa-icon 'sort-amount-down'}}</i>
      </div>
    </div>

    <hr>
    <ul class="large-block-grid-6 small-block-grid-2 medium-block-grid-3 list items_list xxlarge-block-grid-4">
      {{#each offers as |record|}}
        {{offers-block record=record district=record.district_id}}
      {{/each}}
    </ul>
  </section>
</div>
