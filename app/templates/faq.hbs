<section class="main-section privacy faq_list">
  <nav class="tab-bar">
    <section class="left-large">
      <div class="back-button" {{action 'back'}}>
        {{fa-icon "angle-left"}} {{t "back"}}
      </div>
    </section>
    <section class="middle tab-bar-section">
      <h1 class="title">{{t "faq.title"}}</h1>
