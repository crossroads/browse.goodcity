<div class="goods_search">
  <div class="row">
    <div class="small-12 large-offset-1 large-10">
      <div class="row fixed_search_header search-box ui">
        <div class="row">
          <div class="small-2 medium-1 large-1 columns back_button">
            <div class="back_icon" {{action "back"}}>
              <i>{{fa-icon 'angle-left'}}</i>
              <span class="package_back"> {{t "search_goods.done"}}</span>
            </div>
          </div>
          <div class="small-10 large-10 medium-10 columns input-field">
            {{focus-textfield
              name="searchText"
              id="searchText"
              placeholder= (t "search_goods.placeholder")
              value=searchText }}

            {{#if hasSearchText}}
            <i class="fa" {{action "clearSearch"}}>{{fa-icon 'times-circle'}}</i>
            {{/if}}
          </div>
          <div class="row">
            <div class="small-12 medium-12 columns">
              <label class="form-label search_info">{{t "search_goods.search_info"}}</label>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <section class="package_search_result">
    <div class="row">
      <div class="small-12 medium-12 large-offset-1 large-10 columns">
        {{#if displayResults}}
        {{#infinite-list height="80vh" loadMore=(action "loadMoreGoods") as |results| }}
        <ul
          class="large-block-grid-5 small-block-grid-2 medium-block-grid-3 list-image items_list xxlarge-block-grid-4">
          <label class="search_results title">{{t 'search_goods.title'}}</label>
          {{#each results as |result|}}
          <li class="goods_search list">
            <div class="row" {{action "selectItem" result}}>
              <div class="small-12 large-12 columns item">
                {{cloudinary-image-tag src=result.displayImageUrl item=result displayItemOverlay=true}}
              </div>
            </div>
          </li>
          {{else}}
          <div class='no_result'>{{t "no_search_results"}}</div>
          {{/each}}
        </ul>
        {{/infinite-list}}
        {{/if}}
      </div>
    </div>
  </section>
</div>
