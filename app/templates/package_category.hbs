<div class="category_page">
  <nav class="tab-bar category_page">
    <section class='main-section ui'>
      <h1 class="title hide-for-small">{{model.name}}</h1>
      {{!-- commented temporarily to hide search icon from live app until search feature is available --}}
      {{!-- <section class="search_icon right-small">
        <i aria-hidden="true" class="fa fa-search"></i>
      </section> --}}
      <nav class="breadcrumbs">
        {{#link-to 'browse' classNames="underline-link"}}{{t 'browse.all_goods'}}{{/link-to}}
        {{#link-to 'package_category' model.id classNames="current"}}{{model.name}}{{/link-to}}
        {{select-list class="category_select" content=selectCategories on-change=(action (mut selectedCategoryId)) prompt=(t 'browse.filter_results')}}
        <i class="fa fa-caret-down category_select"></i>
      </nav>
    </section>
  </nav>

  <section class="main-section category-items-list">
    <div class="row sort">
      <div class="small-2 medium-1 medium-offset-7 small-offset-5 columns large-1 large-offset-9 title" align="right">
        {{t "category.sort.title"}}
      </div>
      <div class="small-4 large-2 columns dropdown" align="left">
        {{ select-list class="package-category" content=sortOptions on-change=(action (mut selectedSort)) }}
        <i class="fa fa-sort-amount-desc dropdown" aria-hidden="true"></i>
      </div>
    </div>

    {{paginated-items content=sortedItems page=page perPage=perPage query=query sortBy=selectedSort category=currentCategoryId}}
  </section>
</div>
