<nav class="tab-bar hide-for-small">
  <section class='left-samll'style="float: left;">
    {{notification-icon}}
  </section>
  <section class='main-section'>
    <h1 class="browse-title" align="center">{{t "browse.title"}}</h1>
  </section>
  <section class="right-small" style="float: right;">
    {{#link-to "search_goods"}}
    <i class="fa">{{fa-icon 'search'}}</i>
    {{/link-to}}
  </section>
</nav>

<section class="main-section">
  <div class="row">
    <div class="small-12 columns info_box">
      <p>{{t 'browse.intro_text'}}
         {{#link-to "about" classNames="underline-link"}} {{ t "browse.faq" }} {{/link-to}}</p>
      {{#if (is-and freeDeliveryEnabled freeDeliveryQuantityAvailable)}}
      <p>
        <i class="fa">{{fa-icon 'exclamation-triangle'}}</i>
        {{ t 'browse.ngo_offer' }}
        {{#link-to 'package' freeDeliveryPackageId}}
          {{ t 'browse.ngo_offer_description' }}
        {{/link-to}}
      </p>
      {{/if}}
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <ul class="small-block-grid-3 large-block-grid-5 xxlarge-block-grid-6 list">
        {{#each parentCategories as |category|}}
        <li>
          {{#link-to 'package_category' category.id}}
          <img src="{{category.imageUrl}}" />
          {{/link-to}}
          <div class='main_category'>
            {{#link-to 'package_category' category.id class="big_txt"}}
            {{category.name}} ({{category.packagesAndSets.length}})
            {{/link-to}}
          </div>
          <ul class="list subcategories hide-for-small">
            {{#each category.childCategories as |childCategory|}}
            <div class="custom_a" {{action "setChildCategory" childCategory}}>
              <li>{{childCategory.name}} ({{childCategory.packagesAndSets.length}})</li>
            </div>
            {{/each}}
          </ul>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</section>
