<nav class="tab-bar hide-for-small">
  <section class='main-section'>
    <h1 class="browse-title" align="center">{{t "browse.title"}}</h1>
  </section>
  <section class="right-small" style="float: right;">
    {{#link-to "search_goods"}}
      <i aria-hidden="true" class="fa fa-search"></i>
    {{/link-to}}
  </section>
</nav>
<section class="main-section">
  <div class="row home_section show-for-small small light">
    <div class="small-12 columns">
      <label class="form-label browse-label">
        <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
        {{t 'browse.intro_text'}}
        {{#link-to "faq" classNames="underline-link"}} {{ t "browse.faq" }} {{/link-to}}
      </label>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <ul class="small-block-grid-3 large-block-grid-5 xxlarge-block-grid-6 list">
        {{#each parentCategories as |category|}}
          <li>
            {{#link-to 'package_category' category.id}}
              <img src="{{category.imageUrl}}"/>
            {{/link-to}}
            <div class='main_category'>
              {{#link-to 'package_category' category.id class="big_txt"}}
                {{category.name}} ({{category.items.length}})
              {{/link-to}}
            </div>
            <ul class="list subcategories hide-for-small">
              {{#each category.childCategories as |childCategory|}}
                {{#link-to 'package_category' childCategory.id class="custom_a"}}
                  <li>{{childCategory.name}} ({{childCategory.items.length}})</li>
                {{/link-to}}
              {{/each}}
            </ul>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
</section>
